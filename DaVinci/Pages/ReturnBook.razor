        </div>
        <div class="col" id="searchID">
                <label>Search by Book ID</label>
        </div>
        <div class="col" id="SearchDateBorrowed">
                <label>Search by Date</label>
        </div>
      </div>
      @* SEARCH FUNCTIONS *@
        @if (Patron == "Guest")
        {
            <div class="row">
